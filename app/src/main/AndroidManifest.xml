<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="LockedOrientationActivity"
    package="com.jumpitt.happ">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Google Analytics-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!-- background location API 29 or higher-->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- BLE-->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>


    <application
        android:name="com.jumpitt.happ.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.jumpitt.happ.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.OnBoard"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.login.Login"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.registerStepOne.RegisterStepOne"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.registerStepTwo.RegisterStepTwo"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.main.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.registerWorkPlace.RegisterWorkplace"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.registerPermissions.RegisterPermissions"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.registerSuccess.RegisterSuccess"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.registerLivingPlace.RegisterLivingPlace"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.triage.TriageActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.TracingLogActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.changePassword.ChangePasswordActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.recoverPassword.RecoverPasswordActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.jumpitt.happ.ui.WebViewActivity"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>